@section Scripts {
    @Scripts.Render("~/bundles/app")
}
<div class="jumbotron">
    <h1>MiPago</h1>
</div>

<div class="row">

    <div class="col-md-4">
        <form data-bind="submit: callApi2">
            <h3>Solicitud de pago:</h3>
            <div class="form-group">
                <label>App Orden Id:</label>
                <input class="form-control" type="text" data-bind="value: AppOrdenId" />
            </div>
            <div class="form-group">
                <label>Monto</label>
                <input class="form-control" type="text" data-bind="value: Monto" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Pagar</button>
            </div>
        </form>
    </div>
</div>